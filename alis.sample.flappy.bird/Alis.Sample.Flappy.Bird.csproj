<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <None Condition="Exists('$(ProjectDir)/Assets/') == True"
              Update="$(ProjectDir)/Assets/**"
              LinkBase="Assets/"
              CopyToOutputDirectory="Always"
              CopyToPublishDirectory="Always"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Alis" Version="*" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\CHANGELOG.md">
        <Link>.Config\CHANGELOG.md</Link>
      </Content>
      <Content Include="..\code_of_conduct.md">
        <Link>.Config\code_of_conduct.md</Link>
      </Content>
      <Content Include="..\Directory.Build.props">
        <Link>.Config\Directory.Build.props</Link>
      </Content>
      <Content Include="..\funding.yml">
        <Link>.Config\funding.yml</Link>
      </Content>
      <Content Include="..\licence.md">
        <Link>.Config\licence.md</Link>
      </Content>
      <Content Include="..\readme.md">
        <Link>.Config\readme.md</Link>
      </Content>
    </ItemGroup>
</Project>